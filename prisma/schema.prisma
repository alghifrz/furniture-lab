generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id    String @id @default(uuid())
  nama  String
  email String @unique
  pw    String
}

model pending_user {
  id        String   @id @default(uuid())
  nama      String
  email     String   @unique
  pw        String
  token     String
  expiredAt DateTime
} 